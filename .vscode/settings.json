// Place your settings in this file to overwrite default and user settings.
{
    "files.autoSave": "onFocusChange",
    "files.encoding": "utf8",
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "_site": true,
        ".asset-cache": true,
        ".sass-cache": true
    },
    "html.format.endWithNewline": true,
    "html.format.indentHandlebars": false,
    "editor.rulers": [
        80,
        120
    ]
}